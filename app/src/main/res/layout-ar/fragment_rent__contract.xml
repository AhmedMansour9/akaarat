<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f8fcff"
    tools:context=".Fragments.Contact_Us">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0691de"
        android:layout_marginTop="@dimen/_10sdp"
        app:popupTheme="@style/PopupOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<ImageView-->
            <!--android:layout_width="@dimen/_30sdp"-->
            <!--android:layout_height="@dimen/_30sdp"-->
            <!--android:src="@drawable/ic_nav"-->
            <!--/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/requestcontract"
                android:textStyle="bold"
                android:id="@+id/select_state"
                />



        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:id="@+id/img_contact"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/ic_contract_demand"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_contact"
        android:layout_centerHorizontal="true"
        android:textColor="#0590de"
        android:id="@+id/service_contract"
        android:gravity="center"
        android:text="@string/servicecontract"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/service_contract"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bs_spinner_search"
        android:hint="@string/ownernationaltyid"
        android:textColorHint="#bcbcbc"
        android:inputType="textEmailAddress"
        android:maxLength="5"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:id="@+id/E_Owner"
        android:textSize="@dimen/_12sdp"
        android:paddingLeft="@dimen/_10sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/E_Owner"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bs_spinner_search"
        android:hint="@string/tenent"
        android:textColorHint="#bcbcbc"
        android:inputType="number"
        android:maxLength="5"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:id="@+id/E_Phone"
        android:textSize="@dimen/_12sdp"
        android:paddingLeft="@dimen/_10sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/E_Phone"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bs_spinner_search"
        android:hint="@string/phone"
        android:textColorHint="#bcbcbc"
        android:inputType="number"
        android:maxLength="5"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:id="@+id/E_Message"
        android:textSize="@dimen/_12sdp"
        android:paddingLeft="@dimen/_10sdp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/E_Message"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="#0591de"
        android:text="@string/send"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:id="@+id/Btn_Send"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Btn_Send"
        android:layout_centerHorizontal="true"
        android:textColor="#0590de"
        android:id="@+id/service_whats"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/servicewhatsapp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_below="@+id/service_whats"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_whatsapp"
            android:id="@+id/img_whatsapp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#0691de"
            android:id="@+id/Phone"
            android:layout_toLeftOf="@+id/img_whatsapp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp" />


    </RelativeLayout>



</RelativeLayout>