<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <TextView
        android:id="@+id/T_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="title"
        android:gravity="center"
        android:background="#0691de"
        android:textColor="#FFF"
        android:textStyle="bold"/>
    <RelativeLayout
        android:id="@+id/rel_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/T_title">
        <ImageView
            android:id="@+id/img_user_name"
            android:layout_width="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_user_reservation"
            android:layout_marginTop="@dimen/_4sdp"
            />
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#0691de"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@id/img_user_name"
            android:id="@+id/view1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:layout_toEndOf="@id/view1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_11sdp"
            android:textColor="#737373"
            android:id="@+id/Txt_customer_name"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_partment_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_user">
        <ImageView
            android:id="@+id/img_partment_details"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_part"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#0691de"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@id/img_partment_details"
            android:id="@+id/view2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="partment det"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@id/view2"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_11sdp"
            android:textColor="#737373"
            android:id="@+id/Txt_description"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_partment_details">
        <ImageView
            android:id="@+id/img_date"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_time_blue"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            />
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#0691de"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@id/img_date"
            android:id="@+id/view3"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:layout_toEndOf="@id/view3"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="#737373"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_11sdp"
            android:id="@+id/T_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rent duration"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:id="@+id/T_RentTime"
            android:textColor="#0691de"
            android:layout_marginEnd="@dimen/_6sdp"
            android:textSize="@dimen/_11sdp"
            />
    </RelativeLayout>
</RelativeLayout>